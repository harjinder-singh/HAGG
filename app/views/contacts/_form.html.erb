<div class="form-group col-sm-12">
	<label class="col-sm-3 control-label">Name</label>
	<div class="col-sm-4">
		<div class="input-group">
			<%= f.text_field :name, class: "form-control",placeholder: "Enter Name", :"data-validation" => "required", :"data-validation-error-msg" => "Please enter name"%>
		</div>
	</div>
</div>
<div class="form-group col-sm-12">
	<label class="col-sm-3 control-label">Email</label>
	<div class="col-sm-4">
		<div class="input-group">
			<%= f.text_field :email, class: "form-control",placeholder: "Enter Email", :"data-validation" => "email", :"data-validation-error-msg" => "Please enter valid email for eg: user@example.com"%>
		</div>
	</div>
</div>
<div class="form-group col-sm-12">
	<label class="col-sm-3 control-label">Phone No</label>
	<div class="col-sm-4">
		<div class="input-group">
			<%= f.text_field :phone_no, class: "form-control",placeholder: "Enter Phone No"%>
		</div>
	</div>
</div>
<div class="form-actions fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-offset-3 col-md-9">
				<button type="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
			</div>
		</div>
	</div>
</div>