<div class="main">
	<div class="wrap">
		<div class="section group">
			<div class="cont span_2_of_3">
				<h2 class="head">Featured Products</h2>
				<!-- Logic for 3 pics in row -->
				<%j=0%>
				<%@featured.each_with_index do |var,index|%>
					<%j= j+1%>
					<%if index!=0 and index%3==0 %>
						<div class="clear"></div>
						</div>
					<%end%>
					<%if index==0 or index%3==0 %><div class="top-box"><%end%>
					<div class="col_1_of_3 span_1_of_3"> 
						<a href="<%= variant_path(var)%>">
							<div class="inner_content clearfix">
								<div class="product_image">
									<img src=<%= var.photos.first.try(:img).try(:url)%> alt=""/>
								</div>
								<!--<div class="sale-box"><span class="on_sale title_shop">New</span></div>-->	
								<div class="price">
									<div class="cart-left">
										<p class="title"><%= var.name %></p>
									</div>
									<div class="cart-right"> </div>
									<div class="clear"></div>
								</div>				
							</div>
						</a>
					</div>
				<%end%>
				<div class="clear"></div></div>
				<h2 class="head">Hot Deals</h2>
				<!-- Logic for 3 pics in row -->
				<%j=0%>
				<%@hot_deals.each_with_index do |var,index|%>
					<%j= j+1%>
					<%if index!=0 and index%3==0 %>
						<div class="clear"></div>
						</div>
					<%end%>
					<%if index==0 or index%3==0 %><div class="top-box"><%end%>
					<div class="col_1_of_3 span_1_of_3"> 
						<a href="<%= variant_path(var)%>">
							<div class="inner_content clearfix">
								<div class="product_image">
									<img src=<%= var.photos.first.try(:img).try(:url)%> alt=""/>
								</div>
								<!--<div class="sale-box"><span class="on_sale title_shop">New</span></div>-->	
								<div class="price">
									<div class="cart-left">
										<p class="title"><%= var.name %></p>
									</div>
									<div class="cart-right"> </div>
									<div class="clear"></div>
								</div>				
							</div>
						</a>
					</div>
				<%end%>
				<div class="clear"></div></div>
			</div>
			<div class="rsidebar span_1_of_left">
				<div class="top-border" align="center"></div>
				<div class="border">
					<div class="slider-wrapper theme-default">
						<div id="slider" class="nivoSlider">
							<%@hot_deals.each do |var|%>
							<%if var.photos.any?%>
								<img src=<%= var.photos.first.try(:img).try(:url)%>  alt="" />
							<%end%>
							<%end%>
						</div>
					</div>
					<div align="center">Hot Deals <a href="/hot_deals">Check it Out</a></div>
				</div>
				<div class="top-border"> </div>
				<div class="sidebar-bottom">
					<h2 class="m_1">Newsletters<br> Signup</h2>
					<p class="m_text">Lorem ipsum dolor sit amet, consectetuer</p>
					<div class="subscribe">
						<form>
							<input name="userName" type="text" class="textbox">
							<input type="submit" value="Subscribe">
						</form>
					</div>
				</div>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</div>