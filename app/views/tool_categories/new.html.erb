<div class="main">
	<div class="wrap">
		<ul class="breadcrumb breadcrumb__t"><a class="home" href="#">Home</a> / Add new product</ul>
		<div class="clear"></div>
		<div class="row">
			<div class="col-md-12">
				<!-- BEGIN PORTLET-->
				<div class="panel panel-default">
					<div class="panel-heading">
						<h3 class="panel-title">
							New Product Form
						</h3>
					</div>
					<div class="panel-body form">
						<%= form_for @category, url: tool_categories_path, html: {multipart: true, class: "form-horizontal form-bordered"} do |f| %>
							<%= render "form", :f => f%>
						<%end%>
					</div>
				</div>
				<!-- END PANEL-->
			</div>
		</div>
	</div>
</div>
